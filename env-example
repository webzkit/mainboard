###########################################################
###################### General Setup ######################
###########################################################

### Paths #################################################

# You may add flags to the path `:cached`, `:delegated`. When using Docker Sync add `:nocopy`
APP_CODE_CONTAINER_FLAG=:cached

# Choose storage path on your machine. For all storage systems
DATA_PATH_HOST=~/.data-docker/zkit/data

### All Networks driver #################################
NETWORKS_DRIVER=bridge

# All volumes driver
VOLUMES_DRIVER=local

### NGINX ###############################################
### not yet
NGINX_HOST_HTTP_PORT=80
NGINX_HOST_HTTPS_PORT=443

BACKEND_CORS_ORIGINS=["http://localhost:5500", "http://localhost:5501"]

### docker build #######################################
PYTHON_VERSION=3.11-slim
INSTALL_FFMPEG=True

### POSTGRES ##########################################
POSTGRES_VERSION=alpine
POSTGRES_HOST=postgres
POSTGRES_USER=default
POSTGRES_PASSWORD=secret
POSTGRES_PORT=5432

### PGADMIN ###########################################
# use this address http://ip6-localhost:5050
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=pgadmin4@pgadmin.org
PGADMIN_DEFAULT_PASSWORD=admin

### MONGODB ###########################################
MONGO_ROOT_USERNAME=devroot
MONGO_ROOT_PASSWORD=devroot
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_VERSION=7.0.12

### Service Engine ######################################
APP_NAME=ZKit
APP_DOMAIN=http://zkit.local
APP_API_PREFIX=/api/v1
APP_ENV=development
APP_PORT=80
APP_DB=engines

### AVATAR SERVICE ####################################
AVATAR_APP_DOMAIN=http://avatar-zkit.local
AVATAR_APP_API_PREFIX=/api/v1
AVATAR_APP_NAME=Avatar-Zkit
AVATAR_APP_ENV=development
AVATAR_APP_PORT=81
AVATAR_APP_DB=avatars

### CONTENT SERVICE ####################################
CONTENT_APP_DOMAIN=http://content-zkit.local
