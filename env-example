### MULTIMEDIA SERVICE ################################
MULTIMEDIA__APP_NAME=MultiMedia
MULTIMEDIA__APP_API_PREFIX=/api/v1
MULTIMEDIA__APP_ENV=development
MULTIMEDIA__APP_PORT=8084
MULTIMEDIA__APP_DB=multimedias

# supported: local, google, s3
MULTIMEDIA__PREFERED_STORAGE=local
# save original file or nah True/False
MULTIMEDIA__SAVE_ORIGINAL=True
MULTIMEDIA__IMAGE_ORIGINAL_LOCAL_PATH=static/pictures/original/
MULTIMEDIA__IMAGE_THUMBNAIL_LOCAL_PATH=static/pictures/thumbnail/
MULTIMEDIA__IMAGE_THUMBNAIL=True
MULTIMEDIA__IMAGE_AllOWED_FILE_FORMAT=png,jpeg,jpg,webp
MULTIMEIDA__IMAGE_CONVERTING_PREFERED_FORMAT=png
# supported:pillow-simd,ffmpeg
# default:ffmpeg
MULTIMEDIA__IMAGE_OPTIMIZATION_USING=ffmpeg
MULTIMEDIA__IMAGE_THUMBNAIL_MAX_WIDTH=320
# Qrcode
MULTIMEDIA__QR_IMAGE_WITH_LOGO=True
MULTIMEDIA__QR_IMAGE_LOCAL_PATH=static/qr/
MULTIMEDIA__QR_IMAGE_LOGO_PATH=static/logo/logo.png

