APIGATEWAY_SERVICE_NAME=api_gateway
ENGINE_SERVICE_NAME=engine
AVATAR_SERVICE_NAME=avatar
MULTIMEDIA_SERVICE_NAME=multimedia
NETWORK_MANAGEMENT_SERVICE_NAME=network_management

### API Gateway #######################################
APIGATEWAY__APP_NAME=Api-Gateway
APIGATEWAY__APP_API_PREFIX=/api/v1
