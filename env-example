### MULTIMEDIA SERVICE ####################################
MULTIMEDIA_APP_DOMAIN=http://multimedia-zkit.local
MULTIMEDIA_APP_API_PREFIX=/api/v1
MULTIMEDIA_APP_NAME=MultiMedia-Zkit
MULTIMEDIA_APP_ENV=development
MULTIMEDIA_APP_PORT=84
MULTIMEDIA_APP_DB=multimedias
# supported: local, google, s3
MULTIMEDIA_PREFERED_STORAGE=local
# save original file or nah True/False
MULTIMEDIA_SAVE_ORIGINAL=True
MULTIMEDIA_IMAGE_ORIGINAL_LOCAL_PATH=static/pictures/original/
MULTIMEDIA_IMAGE_THUMBNAIL_LOCAL_PATH=static/pictures/thumbnail/
MULTIMEDIA_IMAGE_THUMBNAIL=True
MULTIMEDIA_IMAGE_AllOWED_FILE_FORMAT=png,jpeg,jpg,webp
MULTIMEIDA_IMAGE_CONVERTING_PREFERED_FORMAT=png
# supported:pillow-simd,ffmpeg
# default:ffmpeg
MULTIMEDIA_IMAGE_OPTIMIZATION_USING=ffmpeg
MULTIMEDIA_IMAGE_THUMBNAIL_MAX_WIDTH=320
# Qrcode
MULTIMEDIA_QR_IMAGE_WITH_LOGO=True
MULTIMEDIA_QR_IMAGE_LOCAL_PATH=static/qr/
MULTIMEDIA_QR_IMAGE_LOGO_PATH=static/logo/logo.png

